{
  "name": "@tsops/core",
  "version": "0.5.0",
  "description": "Core library for tsops - TypeScript toolkit for Kubernetes",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "default": "./dist/config/index.js"
    },
    "./dsl": {
      "types": "./dist/dsl/index.d.ts",
      "default": "./dist/dsl/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@tsops/k8": "workspace:*"
  },
  "devDependencies": {
    "vitest": "^1.0.4"
  },
  "scripts": {
    "build": "tsc -b .",
    "dev": "tsc -b --watch",
    "clean": "rm -rf dist",
    "lint": "pnpm -w exec eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:types": "vitest run --testNamePattern='Type System'"
  },
  "keywords": [
    "kubernetes",
    "k8s",
    "typescript",
    "devops"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pom4H/tsops.git",
    "directory": "packages/core"
  },
  "license": "MIT",
  "author": "Roman Popov",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
