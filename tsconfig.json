{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": ["node", "vitest"]
  },
  "references": [
    { "path": "packages/k8" },
    { "path": "packages/core" },
    { "path": "packages/node" },
    { "path": "packages/cli" }
  ]
}
