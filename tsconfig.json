{
  "compilerOptions": {
    "target": "es2024",
    "module": "esnext",
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "package.json"
  ],
  "exclude": ["dist", "node_modules"]
}
